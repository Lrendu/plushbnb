<h1>My Plushes</h1>

<div class="wrapper">
  <div class="plush-card">
    <% current_user.plushes.each do |owner_plush| %>
      <p><%= owner_plush.name %></p>
      <p><%= owner_plush.description %></p>
      <% if owner_plush.photo.attached? %>
        <p><%= owner_plush.photo.key %></p>
      <% else %>
        <p>No photo</p>
      <% end %>
      <p><%= owner_plush.price %> â‚¬ / jour</p>
      <p>Bookings for <%= owner_plush.name %> :</p>
      <% owner_plush.rentals.each do |owner_plush_rental| %>
        <p><%= owner_plush_rental.date %></p>
      <% end %>
      <div class="bouton"><h6>Supprimer cette peluche</h6>
              <%= link_to "", users_user_plushes_path(@plush),
              method: :delete,
              data: { confirm: "Are you sure?" },
              class: "fas fa-trash" %>
            </div>
    <% end %>
  </div>
</div>

