<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Plushes</h1>
    </div>
  </div>


        <p>All <%= Plush.count %> of our plushes.</p>


  <div class="row">
    <% @plushes.each do |plush| %>
      <div class="col-4">
        <div class="flat-card">
          <!-- <div class="flat-card-image" style="background-image: url('<%= flat.picture_url %>')"></div> -->
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= plush.name %></h4>
            </div>
            <p><%= plush.description %></p>
            <div class="flex">
              <div class="flex">
                <i class="material-icons mr-2">euro_symbol</i><span><%= plush.price %></span>
              </div>

            </div>
          </div>
          <div class="flat-card-actions">
            <%= link_to 'More info', flat_path(flat) %>
            <%= link_to 'Edit', edit_flat_path(flat), class: 'ml-3 text-warning' %>
            <%= link_to "Remove", flat_path(flat),
                method: :delete,
                data: { confirm: "Are you sure?" },
                class: 'ml-3 text-danger'
            %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
